<!DOCTYPE html>
<html>
    <% include ../Fixed/Header.ejs %>
    
    <body class="skin-black">
        <% include ../Fixed/HeaderLogo.ejs %>


        <div class="wrapper row-offcanvas row-offcanvas-left">
            <% include ../Fixed/NavBar.ejs %>

            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">    
                
                 <!-- Main content -->
                 <section class="content">                        
                    <div class="row">
                       <div class="col-md-12">
                           <!-- general form elements -->
                           <div class="box box-primary">
                               <div class="box-header">
                                   <h3 class="box-title">Edit Intent</h3>
                               </div><!-- /.box-header -->
                               <!-- form start -->
                               <form role="form">
                                   <div class="box-body">
                                       <div class="form-group">
                                           <label for="exampleInputEmail1">Key Word</label>
                                           <input type="text" class="form-control" disabled value="<%= synonym.keyWord %>">
                                       </div>
                                       <div class="form-group">                                           
                                           <table class="table table-bordered">                                                
                                            <table class="table table-bordered"> 
                                                <tr>
                                                    <th style="width: 90%">Synonyms</th>
                                                    <th>Action</th>                                                       
                                                </tr>          
                                                <% synonym.synonyms.forEach(function(customer){ %>
                                                    <tr>
                                                        <td><%= customer %></td>
                                                        <td><button class="btn btn-sm btn-danger">Delete <i class="fas fa-trash"></i></button></td>   
                                                    </tr>                                                            
                                                <% }) %>                                                                           
                                            </table>
                                       </div>
                                   </div>
                                   <div class="box-footer text-center">
                                        <button type="submit" class="btn btn-primary btn-lg">Save</button>
                                    </div>
                               </form>
                           </div>
                       </div>
                    </div>
            </section><!-- /.content -->
             
            </aside><!-- /.right-side -->
        </div><!-- ./wrapper -->


        <% include ../Fixed/footer.ejs %>       
            
    </body>
</html>